                android:layout_height="48dp"
                android:text="CheckBox" />

            <CheckBox
                android:id="@+id/checkBox17"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="CheckBox" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
