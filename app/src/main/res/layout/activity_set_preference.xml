                android:layout_height="48dp"
                android:text="CheckBox" />

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="CheckBox" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
