<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.untitled.untitledapk.SetPreference">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Food Type" />

            <CheckBox
                android:id="@+id/cbFoodType1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Food Type1" />

            <CheckBox
                android:id="@+id/cbFoodType2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Food Type 2" />

            <CheckBox
                android:id="@+id/cbFoodType3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Food Type 3" />

            <CheckBox
                android:id="@+id/cbFoodType4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Food Type 4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Category" />

            <CheckBox
                android:id="@+id/cbCategory1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Category 1" />

            <CheckBox
                android:id="@+id/cbCategory2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Category 2" />

            <CheckBox
                android:id="@+id/cbCategory3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Category 3" />

            <CheckBox
                android:id="@+id/cbCategory4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Category 4" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
